<% include partials/header %>

<div class="ui main text container">
  <header class="ui center aligned huge header">
    <h1>
      <i class="archive icon"></i>
      View Program Archive</h1>
  </header>

  <div class="ui top attached segment">
    <div class="ui divided items">
      <% workouts.forEach(function(workout){ %>
      <div class="item">
          <div class="content">
        <a class="ui huge header" href="/workout/<%= workout._id %>">
          <h1>
            <%= workout.title %>
          </h1>
        </a>
        <div class="meta">
            <span><strong>Author:</strong> <%= workout.author %> -</span>
            <span><strong>Published:</strong> <%= workout.date.toDateString() %></span>
        </div>
        
          <div class="description">
            <p><strong>Classification:</strong> <%= workout.classification %></p>
            <p><strong>Duration:</strong> <%= workout.duration %></p>
            <p><strong>Description:</strong> <%- workout.description %></p>
          </div>
          <div class="flexButtonBox">
            <a class="ui floated basic blue button" href="/workout/<%= workout._id %>">
              Read more...
            </a>
          </div>
        </div>
      </div>
      <% }) %>

    </div>
  </div>
</div>
<% include partials/footer %>