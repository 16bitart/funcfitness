<% include partials/header %>


<header class="ui center aligned massive header">
  <h1>
    <i class="archive icon"></i>
    View Article Archive
  </h1>
</header>
<div class="ui main text container">
  <div class="ui top attached segment">
    <div class="ui divided items">

      <% articles.forEach(function(article){ %>
      <div class="item">
        <div class="image-box">
          <div class="ui medium image">
            <img src="<%=article.image%>">
          </div>
        </div>




        <div class="content">

          <h1>
            <a class="ui small header" href="/article/<%= article._id %>">
              <%= article.title %>
            </a>
          </h1>

          <div class="meta">
            <span><strong>Author:</strong> <%= article.author %></span>
            <span><strong>Published:</strong> <%= article.date.toDateString() %></span>
          </div>
          <div class="ui divider"></div>
          <div class="description">
            <p><%- article.description %></p>
          </div>
          <div class="flexButtonBox">
            <a class="ui floated basic green button" href="/article/<%= article._id %>">
              Read more...
            </a>
          </div>
        </div>
      </div>
      <% }) %>

    </div>
  </div>
</div>
<% include partials/footer %>