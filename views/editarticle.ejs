<% include partials/header %>

<div class="ui main text container segment">
  <header class="ui huge header">Edit <%= article.title %></header>
  <form class="ui form" action="/article/<%= article._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="article[title]" value="<%= article.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="article[image]" value="<%= article.image %>">
    </div>
    <div class="field">
      <label>Description</label>
      <input type="text" name="article[description]" value="<%= article.description %>">
    </div>
    <div class="field">
      <label>Content</label>
      <textarea name="article[content]" placeholder="Content"><%= article.content %></textarea>
    </div>
    <div class="flexButtonBox">
        <button class="ui blue big basic button">Update</button>
    </div>
  </form>
</div>


<% include partials/footer %>